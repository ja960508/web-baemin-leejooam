extends layout

mixin gridElement(text, src, alt)
  li
    a(href="#") 
      img(src=src, alt=alt)
      span=text

block stylesheet
  link(rel='stylesheet', href='/stylesheets/index.css')

block content
  body
    header.header 
      h1.header__title= title
    img.banner(src="/images/index/banner.png", alt="banner")
    if user
      a.loginLink(href="#")
        img.profile(src="/images/index/profile.png", alt="profile")
        p #{user}님 환영합니다. 
        img.arrow(src="/images/index/arrow.png", alt="arrow")
    else
      a.loginLink(href="/users/login")
        img.profile(src="/images/index/profile.png", alt="profile")
        p 로그인해주세요
        img.arrow(src="/images/index/arrow.png", alt="arrow")
    nav.navGrid
      ul
        +gridElement("포인트", "/images/index/point.png", "point")
        +gridElement("쿠폰함", "/images/index/coupon.png", "coupon")
        +gridElement("선물함", "/images/index/present.png", "present")
        +gridElement("찜", "/images/index/heart.png", "heart")
        +gridElement("주문내역", "/images/index/order.png", "order")
        +gridElement("리뷰관리", "/images/index/review.png", "review")

    ul.toolsLink 
      li.campaign 
        a(href="#")
          img.sproud(src="/images/index/sproud.png", alt="sproud")
          p 일회용품 덜 쓰기, 함께해요!
          img.arrow(src="/images/index/arrow.png", alt="arrow")
      li 
        a(href="#") 
          div
            span 배민페이 등록
            img(src="/images/index/new.png", alt="new")
            div 배민페이로 결제하면 최대 5.5% 배민포인트가 적립됩니다!
          img.arrow(src="/images/index/arrow.png", alt="arrow")
      li
        a(href="#") 
          div
            span 가족계정 관리
            img(src="/images/index/new.png", alt="new")
            div 결제수단을 공유해 우리 가족의 끼니를 챙겨주세요.
          img.arrow(src="/images/index/arrow.png", alt="arrow")
      li 
        a(href="#") 
          div 공지사항
          img.arrow(src="/images/index/arrow.png", alt="arrow")
      li 
        a(href="#") 
          div 배민커넥트 지원
          img.arrow(src="/images/index/arrow.png", alt="arrow")